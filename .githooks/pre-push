#!/bin/bash
# Pre-push hook for Flutter projects
# Ensures all tests pass before pushing to remote

set -e

echo "üöÄ Running pre-push checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

print_error() {
    echo -e "${RED}‚ùå $1${NC}"
}

print_success() {
    echo -e "${GREEN}‚úÖ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}‚ö†Ô∏è  $1${NC}"
}

print_info() {
    echo "‚ÑπÔ∏è  $1"
}

# Check current branch
BRANCH=$(git rev-parse --abbrev-ref HEAD)
print_info "Branch: $BRANCH"
echo ""

# Step 1: Run all tests
print_info "Running all tests..."
if flutter test --coverage; then
    print_success "All tests passed"
else
    print_error "Tests failed"
    echo ""
    echo "Cannot push with failing tests."
    echo "Fix the tests and try again."
    exit 1
fi
echo ""

# Step 2: Check test coverage (optional warning only)
print_info "Checking test coverage..."
if [ -f coverage/lcov.info ]; then
    # Simple coverage check - can be enhanced with lcov tools
    LINES=$(grep -c "^DA:" coverage/lcov.info || echo 0)
    HIT=$(grep "^DA:" coverage/lcov.info | grep -v ",0" | wc -l || echo 0)

    if [ "$LINES" -gt 0 ]; then
        COVERAGE=$(awk "BEGIN {printf \"%.1f\", ($HIT / $LINES) * 100}")
        print_info "Test coverage: $COVERAGE%"

        # Warn if coverage is below 80%
        if (( $(echo "$COVERAGE < 80" | bc -l) )); then
            print_warning "Coverage is below 80% threshold"
            print_info "Consider adding more tests"
        else
            print_success "Coverage meets 80% threshold"
        fi
    fi
else
    print_warning "Coverage report not found"
fi
echo ""

# Step 3: Info message for main branch pushes
if [ "$BRANCH" = "main" ]; then
    print_info "Pushing to main branch"
    print_info "Weekly feature branches are recommended but not required"
    echo ""
fi

# All checks passed
echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
print_success "All pre-push checks passed!"
print_info "Pushing to remote..."
echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
echo ""

exit 0
